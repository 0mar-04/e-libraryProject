@using Microsoft.AspNetCore.Identity
@using e_libraryProject.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link"
               asp-area="Identity"
               asp-page="/Account/Manage/Index"
               title="Manage account">
                <span class="me-1">Hello,</span>
                <strong>@(User.Identity?.Name ?? "User")</strong>
            </a>
        </li>

        <li class="nav-item">
            <form class="d-inline"
                  asp-area="Identity"
                  asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-link nav-link p-0"
                        aria-label="Logout">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">
                Register
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">
                Login
            </a>
        </li>
    }
</ul>
