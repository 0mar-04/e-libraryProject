@model ErrorViewModel
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment Env

@{
    ViewData["Title"] = "Error";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">

            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger text-white">
                    <div class="d-flex align-items-center justify-content-between">
                        <span class="fw-semibold">Something went wrong</span>
                        <span class="badge bg-light text-danger">Error</span>
                    </div>
                </div>

                <div class="card-body">
                    <h1 class="h4 mb-2">We couldn't process your request</h1>
                    <p class="text-muted mb-4">
                        Please try again. If the problem continues, contact support and include the Request ID below.
                    </p>

                    @if (Model?.ShowRequestId == true)
                    {
                        <div class="alert alert-secondary mb-4" role="alert">
                            <div class="d-flex flex-column flex-sm-row gap-2 align-items-sm-center justify-content-between">
                                <div>
                                    <strong>Request ID:</strong>
                                    <code class="ms-1">@Model.RequestId</code>
                                </div>

                                <button type="button"
                                        class="btn btn-sm btn-outline-secondary"
                                        onclick="navigator.clipboard?.writeText('@Model.RequestId')">
                                    Copy ID
                                </button>
                            </div>
                        </div>
                    }

                    <div class="d-flex flex-column flex-sm-row gap-2">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            Back to Home
                        </a>

                        <button type="button" class="btn btn-outline-secondary" onclick="history.back()">
                            Go Back
                        </button>
                    </div>

                    @if (Env.IsDevelopment())
                    {
                        <hr class="my-4" />
                        <h2 class="h6">Development mode</h2>
                        <p class="text-muted mb-2">
                            In Development, you can see more detailed error information.
                        </p>
                        <ul class="text-muted mb-0">
                            <li>Set <code>ASPNETCORE_ENVIRONMENT</code> to <code>Development</code></li>
                            <li>Restart the application</li>
                            <li>Never enable Development in production (it can expose sensitive data)</li>
                        </ul>
                    }
                </div>
            </div>

        </div>
    </div>
</div>
