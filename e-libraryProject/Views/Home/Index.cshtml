@{
    ViewData["Title"] = "Home";
}

<div class="container py-5">

    <!-- Hero Section -->
    <div class="text-center mb-5">
        <h1 class="display-5 fw-semibold mb-3">
            Welcome to <span class="text-primary">e_libraryProject</span>
        </h1>
        <p class="lead text-muted">
            Manage books, authors, and their relationships easily using ASP.NET Core.
        </p>
    </div>

    <!-- Quick Actions -->
    <div class="row g-4 justify-content-center">

        <div class="col-sm-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Books</h5>
                    <p class="card-text text-muted">
                        View, search, and manage the library’s book collection.
                    </p>
                    <a asp-controller="Books" asp-action="Index" class="btn btn-primary">
                        View Books
                    </a>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Authors</h5>
                    <p class="card-text text-muted">
                        Manage author information and contact details.
                    </p>
                    <a asp-controller="Authors" asp-action="Index" class="btn btn-primary">
                        View Authors
                    </a>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Reports</h5>
                    <p class="card-text text-muted">
                        Analyze books by status using built-in reports.
                    </p>
                    <a asp-controller="Reports" asp-action="BooksByStatus" class="btn btn-primary">
                        View Reports
                    </a>
                </div>
            </div>
        </div>

    </div>

    <!-- Footer note -->
    <div class="text-center mt-5 text-muted small">
        Built with ASP.NET Core MVC · Bootstrap 5 · Entity Framework Core
    </div>

</div>
