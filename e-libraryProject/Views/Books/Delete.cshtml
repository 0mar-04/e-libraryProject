@model e_libraryProject.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-7">

            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h1 class="h5 mb-0">Delete Book</h1>
                </div>

                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <strong>Warning:</strong> This action cannot be undone.
                        Are you sure you want to delete this book?
                    </div>

                    <dl class="row mb-4">
                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(m => m.Title)</dt>
                        <dd class="col-sm-8 fw-semibold">@Html.DisplayFor(m => m.Title)</dd>

                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(m => m.Status)</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-secondary">
                                @Html.DisplayFor(m => m.Status)
                            </span>
                        </dd>
                    </dl>

                    <form asp-action="Delete" method="post" class="d-flex flex-column flex-sm-row gap-2">
                        <input type="hidden" asp-for="Id" />

                        <button type="submit" class="btn btn-danger">
                            Delete
                        </button>

                        <a asp-action="Index" class="btn btn-outline-secondary">
                            Cancel
                        </a>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
