@model e_libraryProject.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">

            <!-- Book Info -->
            <div class="card shadow-sm mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h1 class="h5 mb-0">Book Details</h1>

                    <span class="badge bg-secondary">
                        @Html.DisplayFor(m => m.Status)
                    </span>
                </div>

                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(m => m.Title)</dt>
                        <dd class="col-sm-9 fw-semibold">@Html.DisplayFor(m => m.Title)</dd>

                        <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(m => m.Status)</dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(m => m.Status)
                        </dd>
                    </dl>
                </div>

                <div class="card-footer d-flex flex-column flex-sm-row gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        Edit
                    </a>

                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                        Delete
                    </a>

                    <a asp-action="Index" class="btn btn-outline-secondary ms-sm-auto">
                        Back to List
                    </a>
                </div>
            </div>

            <!-- Authors -->
            <div class="card shadow-sm">
                <div class="card-header">
                    <h2 class="h6 mb-0">Linked Authors</h2>
                </div>

                <div class="card-body">
                    @if (Model.BookAuthors != null && Model.BookAuthors.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var ba in Model.BookAuthors)
                            {
                                <li class="list-group-item d-flex flex-column flex-sm-row justify-content-between align-items-sm-center gap-1">
                                    <div class="fw-semibold">@ba.Author.Name</div>
                                    <div class="text-muted small">@ba.Author.Email</div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="alert alert-secondary mb-0" role="alert">
                            No authors linked to this book yet.
                        </div>
                    }
                </div>

                <div class="card-footer">
                    <a asp-controller="BookAuthors" asp-action="Create" class="btn btn-outline-primary">
                        Link an Author to this Book
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>
