@model e_libraryProject.Models.Book

@{
    ViewData["Title"] = "Edit Book";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-7">

            <div class="card shadow-sm">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h1 class="h5 mb-0">Edit Book</h1>
                    <span class="badge bg-secondary">ID: @Model.Id</span>
                </div>

                <div class="card-body">
                    <p class="text-muted mb-4">
                        Update the book information below and click <strong>Save</strong>.
                    </p>

                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2" role="alert"></div>

                        <input type="hidden" asp-for="Id" />

                        <!-- Title -->
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-semibold"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <!-- Status -->
                        <div class="mb-3">
                            <label asp-for="Status" class="form-label fw-semibold"></label>
                            <select asp-for="Status"
                                    class="form-select"
                                    asp-items="Html.GetEnumSelectList<EBookStatus>()">
                            </select>
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>

                        <hr class="my-4" />

                        <!-- Actions -->
                        <div class="d-flex flex-column flex-sm-row gap-2">
                            <button type="submit" class="btn btn-primary">
                                Save
                            </button>

                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                                View Details
                            </a>

                            <a asp-action="Index" class="btn btn-outline-secondary ms-sm-auto">
                                Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
