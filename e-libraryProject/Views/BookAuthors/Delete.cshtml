@model e_libraryProject.Models.BookAuthor

@{
    ViewData["Title"] = "Delete Link";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-7">

            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h1 class="h5 mb-0">Delete Book–Author Link</h1>
                </div>

                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <strong>Warning:</strong> This will remove the link between the selected book and author.
                        This action cannot be undone.
                    </div>

                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Book</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.Book?.Title</dd>

                        <dt class="col-sm-4 text-muted">Author</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.Author?.Name</dd>

                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(m => m.AddedAt)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.AddedAt)</dd>

                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(m => m.Note)</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrWhiteSpace(Model.Note))
                            {
                                @Html.DisplayFor(m => m.Note)
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </dd>
                    </dl>
                </div>

                <div class="card-footer">
                    <form asp-action="Delete" method="post" class="d-flex flex-column flex-sm-row gap-2 mb-0">
                        <input type="hidden" asp-for="Id" />

                        <button type="submit" class="btn btn-danger">
                            Delete
                        </button>

                        <a asp-action="Index" class="btn btn-outline-secondary">
                            Cancel
                        </a>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
