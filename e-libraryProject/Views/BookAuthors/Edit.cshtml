@model e_libraryProject.Models.BookAuthor

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mb-3">Edit</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title mb-3">BookAuthor</h4>

        <div class="mb-3">
            <div><strong>Book:</strong> @Model.Book?.Title</div>
            <div><strong>Author:</strong> @Model.Author?.Name</div>
        </div>

        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="BookId" />
            <input type="hidden" asp-for="AuthorId" />

            <div class="mb-3">
                <label asp-for="AddedAt" class="form-label"></label>
                <input asp-for="AddedAt" class="form-control" />
                <span asp-validation-for="AddedAt" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Note" class="form-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
