@model e_libraryProject.Models.BookAuthor

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-3">Details</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title mb-3">BookAuthor</h4>

        <dl class="row mb-0">
            <dt class="col-sm-3">Book</dt>
            <dd class="col-sm-9">@Model.Book?.Title</dd>

            <dt class="col-sm-3">Author</dt>
            <dd class="col-sm-9">@Model.Author?.Name</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.AddedAt)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.AddedAt)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Note)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Note)</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
</div>
