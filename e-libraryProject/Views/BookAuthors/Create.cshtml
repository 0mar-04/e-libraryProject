@model e_libraryProject.Models.BookAuthor

@{
    ViewData["Title"] = "Link Book & Author";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-7">

            <div class="card shadow-sm">
                <div class="card-header">
                    <h1 class="h5 mb-0">Link Book &amp; Author</h1>
                </div>

                <div class="card-body">
                    <p class="text-muted mb-4">
                        Select a book and an author to create a relationship between them.
                    </p>

                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2" role="alert"></div>

                        <!-- Book -->
                        <div class="mb-3">
                            <label asp-for="BookId" class="form-label fw-semibold"></label>
                            <select asp-for="BookId" class="form-select" asp-items="ViewBag.BookId">
                                <option value="">-- Select Book --</option>
                            </select>
                            <span asp-validation-for="BookId" class="text-danger small"></span>
                        </div>

                        <!-- Author -->
                        <div class="mb-3">
                            <label asp-for="AuthorId" class="form-label fw-semibold"></label>
                            <select asp-for="AuthorId" class="form-select" asp-items="ViewBag.AuthorId">
                                <option value="">-- Select Author --</option>
                            </select>
                            <span asp-validation-for="AuthorId" class="text-danger small"></span>
                        </div>

                        <!-- Note -->
                        <div class="mb-3">
                            <label asp-for="Note" class="form-label fw-semibold"></label>
                            <input asp-for="Note" class="form-control" placeholder="Optional note (e.g., main contributor)" />
                            <span asp-validation-for="Note" class="text-danger small"></span>
                        </div>

                        <hr class="my-4" />

                        <!-- Actions -->
                        <div class="d-flex flex-column flex-sm-row gap-2">
                            <button type="submit" class="btn btn-primary">
                                Create Link
                            </button>

                            <a asp-action="Index" class="btn btn-outline-secondary">
                                Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-muted small mt-3">
                Tip: If the book/author isn’t in the list, add them first from the Books or Authors page.
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
