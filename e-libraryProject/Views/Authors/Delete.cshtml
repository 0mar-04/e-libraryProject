@model e_libraryProject.Models.Author

@{
    ViewData["Title"] = "Delete Author";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-7">

            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h1 class="h5 mb-0">Delete Author</h1>
                </div>

                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <strong>Warning:</strong> This action cannot be undone.
                        Are you sure you want to delete this author?
                    </div>

                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(m => m.Name)</dt>
                        <dd class="col-sm-8 fw-semibold">@Html.DisplayFor(m => m.Name)</dd>

                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(m => m.PhoneNumber)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.PhoneNumber)</dd>

                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(m => m.Email)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.Email)</dd>
                    </dl>
                </div>

                <div class="card-footer">
                    <form asp-action="Delete" method="post" class="d-flex flex-column flex-sm-row gap-2 mb-0">
                        <input type="hidden" asp-for="Id" />

                        <button type="submit" class="btn btn-danger">
                            Delete
                        </button>

                        <a asp-action="Index" class="btn btn-outline-secondary">
                            Cancel
                        </a>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
