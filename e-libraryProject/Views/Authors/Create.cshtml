@model e_libraryProject.Models.Author

@{
    ViewData["Title"] = "Add Author";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-7">

            <div class="card shadow-sm">
                <div class="card-header">
                    <h1 class="h5 mb-0">Add Author</h1>
                </div>

                <div class="card-body">
                    <p class="text-muted mb-4">
                        Add a new author to the system. You can later link authors to books.
                    </p>

                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2" role="alert"></div>

                        <!-- Name -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold"></label>
                            <input asp-for="Name" class="form-control" placeholder="e.g., Robert C. Martin" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- Phone -->
                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label fw-semibold"></label>
                            <input asp-for="PhoneNumber"
                                   class="form-control"
                                   placeholder="e.g., +962 7X XXX XXXX"
                                   inputmode="tel" />
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold"></label>
                            <input asp-for="Email"
                                   class="form-control"
                                   type="email"
                                   placeholder="e.g., author@email.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <hr class="my-4" />

                        <!-- Actions -->
                        <div class="d-flex flex-column flex-sm-row gap-2">
                            <button type="submit" class="btn btn-primary">
                                Create
                            </button>

                            <a asp-action="Index" class="btn btn-outline-secondary">
                                Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
